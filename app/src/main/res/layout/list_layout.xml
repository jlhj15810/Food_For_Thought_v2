<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/cafe_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/agora_cafe"/>

    <TextView
            android:id="@+id/cafe_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginStart ="10dp"
            android:layout_below="@id/cafe_picture"
            android:text="Agora Cafe"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below = "@id/cafe_name"
            android:id="@+id/cafe_description"
            android:layout_marginStart="10dp"
            android:text="Location: Yale East Core \n Ratings: \n Price: $$$"

    />


</RelativeLayout>